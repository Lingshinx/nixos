[keys.viewer]
Shift+asciicircum = first_file
Shift+dollar = last_file
Space = prev_file
Shift+Space = next_file
Left = prev_file
Right = next_file
Shift+h = prev_file
Shift+l = next_file
g = first_file
Shift+g = last_file
d = skip_file
p = animation
Escape = mode gallery
h = step_left
l = step_right 
k = step_up
j = step_down 
r = rotate_right
Shift+r = rotate_left
v = flip_horizontal
Shift+v = flip_vertical
p = exec realpath --relative-base $(pwd) "%"
w = exec ~/.config/lingshin/scripts/swww/switch.sh "%"
Shift+plus = zoom +10
Equal = zoom

[keys.gallery]
h = step_left
l = step_right
k = step_up
j = step_down
p = exec realpath --relative-base $(pwd) "%"

